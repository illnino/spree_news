-# coding: utf-8
- if Spree::Post.all.any?
  .news-ticker
    %h2 最新消息
    %hr
    #news-container
      %ul
        - Spree::Post.published.each do |post|
          %li
            %div
              %h6= post.created_at.strftime("%B %d, %Y")
              = post.description

:javascript
  $(function(){
    $('#news-container').vTicker({
      speed: 1000,
      pause: 4000,
      animation: 'fade',
      mousePause: true,
      showItems: 2
    });
  });
- else
  .new-ticker
    %h2 最新消息
    %hr
    #news-container
      = 暂无消息